<%= simple_form_for @link do |f| %>
		<form>
			<div class="input-field col s6">
				<%= f.input :title, id:"title", class:"validate" %>
			</div>
			<div class="input-field col s6">
				<%= f.input :link, id:"link", class:"validate" %>
			</div>
			<div class="input-field col s6">
				<%= f.input :description, id:"description", class:"validate" %>
			</div>

			<%= f.button :submit %>
		</form>

<% end %>