<%= simple_form_for @link do |f| %>
		
	<div class="input-field col s6">
		<%= f.input :title, id:"title", class:"" %>
	</div>
	<div class="input-field col s6">
		<%= f.input :link, id:"link", class:"" %>
	</div>
	<div class="input-field col s6">
		<%= f.input :description, id:"description", class:"" %>
	</div>

	<%= f.button :submit %>
	
<% end %>